<div class="row justify-content-center">


    <div class="col-8">

        <div class="container new-event">

            <h1 style="color: white">Edit event</h1>

            <form
                method="POST"
                action="/events/new"
                enctype="multipart/form-data"
            >
                

                <div class="row">

                    <div class="col-12">

                        <div class="form-group">
                    <label for="name">Name</label>
                    <input
                        type="text"
                        class="form-control"
                        id="name"
                        name="name"
                        value="{{name}}"
                    />
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea
                        class="form-control"
                        id="description"
                        rows="3"
                        name="description"
                    >{{description}}
                    </textarea>
                </div>

                <div class="row">
                    <div class="col-3">
                        <div class="form-group">
                            <label for="date">Date</label>
                            <input
                                type="date"
                                class="form-control"
                                id="date"
                                name="date"
                                value="{{date.fullDate}}"
                            />
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <label for="time">Hour</label>
                            <input
                                type="time"
                                class="form-control"
                                id="time"
                                name="time"
                                min="00:00" max="23:00"
                                value="{{date.time}}"
                            />
                        </div>
                    </div>
                    
                </div>

                    </div>

                    <div class="form-group col-md-5">
                        <div class="form-group">
                            <label for="event-image">Event Image</label>
                            <input
                                type="file"
                                class="form-control"
                                id="event-image"
                                name="image"
                                value="{{image}}"
                            />
                        </div>
                        
                        <br>

                        <label for="address">Address</label>
                        <input
                                type="text"
                                class="form-control"
                                id="address"
                                name="addressUser"
                                value="{{address}}"
                                required
                        />

                        <br>

                        <button
                            type="button"
                            class="btn btn-primary d-block"
                            id="submit"
                        >Locate</button>
                            
                        <input id="located-address" class="form-control" name="address" hidden></input>
                        <input id="located-latitude" class="form-control" name="lat" hidden></input>
                        <input id="located-longitude" class="form-control" name="lng" hidden></input>
                    </div>

                    <div class="col-md-7">
                        <div id="map-canvas"></div>
                    </div>

                </div>

                <button
                    type="submit"
                    class="btn btn-dark btn-block"
                >Edit event</button>
            </form>
        </div>
    </div>

</div>

<script src="../../js/maps/mapStyles.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="../../js/maps/searchAddress.js"></script>
<script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBXr7ulrn0s_L3XB6wxBClITp6RNzz3bbc&callback=initMap"
></script>