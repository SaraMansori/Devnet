<div class="row justify-content-center">

    <div class="col-8">

        <div class="container new-event">

            <h1 style="color: white">Create new event</h1>

            <form
                method="POST"
                action="/events/new"
                enctype="multipart/form-data"
            >
                <div class="form-group">
                    <label for="name">Name</label>
                    <input
                        type="text"
                        class="form-control"
                        id="name"
                        name="name"
                    />
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea
                        class="form-control"
                        id="description"
                        rows="3"
                        name="description"
                    ></textarea>
                </div>

                <div class="form-group">
                    <label for="date">Date</label>
                    <input
                        type="date"
                        class="form-control"
                        id="date"
                        name="date"
                    />
                </div>

                <div class="row justify-content-center">

                    <div class="form-group col-md-5">
                        <label for="address">Address</label>
                        <input
                            type="text"
                            class="form-control"
                            id="address"
                            name="address"
                            required
                        />

                        <button
                            type="button"
                            class="btn btn-primary d-block"
                            id="submit"
                        >Locate!</button>

                        <div class="form-group">
                            <label for="address">Address</label>
                            <input
                                type="hidden"
                                id="located-address"
                                class="form-control"
                                name="address"
                            />
                        </div>
                        <small id="located-address"></small>

                        <br />
                        <div class="form-group">
                            <label for="event-image">Event Image</label>
                            <input
                                type="file"
                                class="form-control"
                                id="event-image"
                                name="image"
                            />
                        </div>
                    </div>

                    <div class="col-md-7">
                        <div id="map-canvas"></div>
                    </div>

                </div>

                <button
                    type="submit"
                    class="btn btn-dark btn-block"
                >Submit</button>
            </form>
        </div>
    </div>

</div>

<script src="../../js/maps/mapStyles.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="../../js/maps/searchAddress.js"></script>
<script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBXr7ulrn0s_L3XB6wxBClITp6RNzz3bbc&callback=initMap"
></script>