
    <div class="container new-event-container">

        <div class="row justify-content-center">    
        <h1 class="text-center mb-5 mt-5">Create new event</h1>

        <form method="POST" action="/events/new" enctype="multipart/form-data" class="new-event-form">

            <div class="row">

                    <div class="col-12">

                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name" />
                        </div>

                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea class="form-control" id="description" rows="3" name="description"></textarea>
                        </div>

                        <div class="row below-container">

                            <div class="col-6 left">
                                <div class="row">
                                    <div class="col-6 date">
                                        <div class="form-group">
                                            <label for="date">Date</label>
                                            <input type="date" class="form-control" id="date" name="date" />
                                        </div>
                                    </div>  

                                    <div class="col-6 time">
                                        <div class="form-group">
                                            <label for="time">Hour</label>
                                            <input type="time" class="form-control" id="time" name="time" min="00:00" max="23:00" />
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="event-image">Upload Event Image</label>
                                            <input type="file" class="form-control" id="event-image" name="image" />
                                        </div>
                                        <button type="submit" class="btn btn-lg btn-dark btn-new-event">Submit</button>
                                    </div>



                                </div>
                            </div>

                            <div class="col-6 right">

                                <div class="row">

                                    <div class="col-12">
                                        <label for="address">Address</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="address" name="addressUser" required />
                                            <div class="input-group-append">
                                                <button type="button" class="btn btn-primary" id="submit" type="button">Locate</button>
                                            </div>
                                        </div>

                                        <input id="located-address" class="form-control" name="address" hidden></input>
                                        <input id="located-latitude" class="form-control" value="40.4333665" name="lat" hidden></input>
                                        <input id="located-longitude" class="form-control" value="-3.704265999999999" name="lng" hidden></input>
                                        <input id="located-city" class="form-control" value="unknown" name="city" hidden></input>
                                        <input id="located-country" class="form-control" value="unknown" name="country" hidden></input>

                                        <small id="located-address-show"></small>
                                        <br>
                                    </div>

                                    <div class="col-12">
                                        <div id="map-canvas"></div>
                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>

                </div>

        </form>
    </div>

</div>

<script src="../../js/maps/mapStyles.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="../../js/maps/searchAddress.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key={{mapsKey}}&callback=initMap"></script>