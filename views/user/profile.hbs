<div class="container profile-container">

    <div class="row justify-content-center">
        <div class="col-12">

            <div class="row mb-5">

                <div class="col-md-3 col-sm-12 mr-4">

                    <div class="row d-flex align-content-center info">
                        <div class="col-12 mb-3 d-flex justify-content-center">
                            <h2>My profile {{user.name}}</h2>
                        </div>


                        <div class="col-12 mb-4 d-flex justify-content-center">
                            <img width="50%" src="{{user.image}}" alt="image">
                        </div>

                        <div class="col-12 d-flex justify-content-center">
                           <b class="mr-2">Username:</b> <span> {{user.username}}</span>
                        </div>

                        <div class="col-12 d-flex justify-content-center">
                            <p class="textThree">{{user.profession}}</p>
                        </div>

                        <div class="col-12 d-flex justify-content-center">
                            <p> <b>Email :</b> {{user.email}}</p>
                        </div>

                    </div>
                
                </div>
                
                <div class="col-md-9 col-sm-12">

                    <h2>Events Created</h2>
                    <div class="card-deck">
                        <div class="row">
                            {{#each createdEvents}}
                                <div class="col-md-3 col-sm-12">
                                    <a href="/events/details?id={{_id}}">
                                        <div class="card">
                                            <img class="card-img-top" src="{{image}}" alt="{{name}} image">
                                            <div class="card-body">
                                                <h5 class="card-title">{{name}}</h5>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                        
                    <hr>
                    <h2>Events Joined</h2>
                    {{#each participatingEvents}}
                        <div class="col-md-3 col-sm-12">
                            <a href="/events/details?id={{_id}}">
                                <div class="card">
                                    <img class="card-img-top" src="{{image}}" alt="{{name}} image">
                                    <div class="card-body">
                                        <h5 class="card-title">{{name}}</h5>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {{/each}}
                    <hr>
                    <h2>Followers</h2>
                    {{#each user.followers}}
                    {{username}}
                    {{/each}}
                    <hr>
                    <h2>Following</h2>
                    {{#each user.following}}
                    {{username}}
                    {{/each}}
                    <hr>
                    <h2>Bookmarked News</h2>
                    <ul>
                        <li>
                            {{#each user.articles}}
                            <a href="{{url}}">
                            {{title}}
                            </a>
                            <br>
                            {{/each}}
                        </li>

                    </ul>
                    <hr>

                    <h2>Comments</h2>


                        {{#each userComments}}

                            <div class="comment">

                                <div class="mb-1">
                                    <small>Comment by: {{owner.username}}</small> |
                                    <small>{{formattedDate}} at {{time}}</small>
                                </div>
                                <br>
                                <b>{{text}}</b>

                            </div>

                        {{/each}}
                
                    <hr>
                
                </div>

            </div>

        </div>
        
    </div>

</div>