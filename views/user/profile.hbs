<div class="container ">

    <div class="row">
        <div class="col-4">
                <h2>My profile {{user.name}}</h2>

                <img width="50%" src="{{user.image}}" alt="image">

                <br>

                Name : {{user.username}}

                <hr>

                <p class="textThree">Profession : {{user.description}}</p>

                <hr>

                <h5 class="textTwo">Email : {{user.email}}</h5>

                <hr>
        </div>

        <div class="col-8">
            <h2>Events Created</h2>
                {{#each createdEvents}}
                    {{name}}
                {{/each}}
            <hr>
            <h2>Events Joined</h2>
                {{#each joinedEvents}}
                {{name}}
                {{/each}}
            <hr>
            <h2>Followers</h2>
                {{#each user.followers}}
                {{name}}
                {{/each}}
            <hr>
            <h2>Following</h2>
                {{#each user.following}}
                {{name}}
                {{/each}}
            <hr>
            <h2>Bookmarked News</h2>
            <hr>
            <h2>Comments</h2>
            <div class="form-group">
                <form action="/user/comment" method="post">
                    <label for="exampleFormControlTextarea1">New comment</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" name="text" rows="3"></textarea>
                    <input type="text" value="{{user._id}}" name="id">
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
            </div>
        </div>
        
    </div>

</div>